<h1>
  Product List
  <%= link_to '新增商品', new_admin_store_product_path %>
</h1>

<table>
  <thead>
    <tr>
      <th scope='col'>商品名稱</th>
      <th scope='col'>商品價錢</th>
      <th scope='col'>商品數量</th>
      <th scope='col'></th>
      <th scope='col'></th>
      <th scope='col'></th>
    </tr>
  </thead>
  <% @products.each do |product| %>
    <tbody>
      <td><%= product.title %></td>
      <td><%= product.list_price %></td>
      <td><%= product.quantity %></td>
      <td><%= link_to '查看商品', admin_store_product_path(product.store_id, product) %></td>
      <td><%= link_to '編輯商品', edit_admin_store_product_path(product.store_id, product) %></td>
      <td><%= link_to '刪除商品', admin_store_product_path(product.store_id, product), method: :delete, data: { confirm: '確定要刪除商店？' } %></td>
    </tbody>
  <% end %>
</table>
